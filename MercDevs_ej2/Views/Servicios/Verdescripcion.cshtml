@model MercDevs_ej2.Models.Servicio

@{
    ViewData["Title"] = "Ver Descripcion Servicio";
}

<h1>Descripcion Servicio</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
                @foreach (var descripcion in Model.Descripcionservicios)
                {
                    @descripcion.Nombre
                }
        </dd>
        <dt class="col-sm-2">
            Servicio Id
        </dt>
        <dd class="col-sm-10">
            @foreach (var descripcion in Model.Descripcionservicios)
            {
                @descripcion.ServicioIdServicio
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sku)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sku)
        </dd>
        <dt class="col-sm-2">
            Id Uuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioIdUsuarioNavigation.IdUsuario)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdServicio"><button class="btn btn-warning">editar</button></a> |
    <a asp-action="Index"><button class="btn btn-secondary">volver a listado</button></a>
</div>
